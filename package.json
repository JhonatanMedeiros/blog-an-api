{
  "name": "server-api-blog",
  "version": "1.0.0",
  "keywords": [
    "nodejs",
    "express",
    "morgan",
    "mongoose",
    "passport",
    "passport-jwt",
    "babel"
  ],
  "description": "API Rest com Node.js, para o Sistema de Gerenciamento de Postagem. ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "start": "babel-node --presets es2015 ./index.js",
    "serve": "nodemon ./index.js --exec babel-node",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files",
    "start_babel": "babel-node ./index.js --preset=babel-preset-es2015",
    "heroku-postbuild": "npm install",
    "lint": "eslint ."
  },
  "homepage": "https://jhonatanmedeiros.com",
  "author": "Jhonatan Hardt de Medeiros",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JhonatanMedeiros/blog-an-api.git"
  },
  "dependencies": {
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "winston": "^2.4.1",
    "winston-daily-rotate-file": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "moment": "^2.19.3",
    "rimraf": "^2.6.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0
    },
    "env": {
      "mocha": true
    }
  },
  "engines": {
    "node": ">=6"
  }
}
